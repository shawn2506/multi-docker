  {
      "AWSEBDockerrunVersion": 2,
      "containerDefinitions": [
          {
              "name": "client",
              "image": "shonry27/multi-client",
              "hostname": "client",
              "essential": false
          },

          {
               "name": "api",
               "image": "shonry27/multi-server",
               "hostname": "api",
               "essential": false

          },

          {
            "name": "worker",
            "image": "shonry27/multi-worker",
            "hostname": "worker",
            "essential": false

          },

          {
            "name": "nginx",
            "image": "shonry27/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            
            "links": ["client","server"]

          }
    ]
}
